{
    "extends": "stylelint-config-standard",
    "rules": {
      "selector-class-pattern": [
        "^([a-z][a-z0-9]*)(__([a-z0-9-]+))?(--([a-z0-9-]+))?$",
        {
          "message": "Los nombres de clases deben seguir la convenci√≥n BEM (Block__Element--Modifier)"
        }
      ],
  
      "order/order": [
        "custom-properties",
        "dollar-variables",
        "at-variables",
        "declarations",
        "at-rules",
        "rules"
      ]
    }
  }
  